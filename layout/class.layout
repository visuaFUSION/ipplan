       if ( getclass($t) ) {
           $this->insert($t);
       } else {
           $this->textfield = $t ;
       }
    }

    function printit() {
      $this->indent();
      echo "<INPUT TYPE=\"RADIO\"". $this->checked . $this->settings ;
	  echo ">&nbsp; ";
	  if(!empty($this->textfield)) {
         echo $this->textfield ;
      } else {
         $this->printchild();
      }

    }
}

