    function printit() {
        $this->indent();
        echo "<A" . ( empty($this->href)? "" : " HREF=\"". $this->href . "\"");
        echo $this->settings . ">";
                if (empty($this->source)) {
                       $this->printchild();
                } else {
                    echo $this->source;
                }
        echo "</A>";
    }
}

