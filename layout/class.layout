class HTMLBase {
        public $classname = "htmlbase" ;
        public $settings = "";
        public $children = FALSE;
        public $level = 0;

        function insert($c) {
           $this->children[] = $c ;
           $GLOBALS["$c"]->level = $this->level + 1 ;
        }

        function listchild() {
           reset($this->children);
           foreach($this->children as $key => $ch) {
                $val = $this->children[$key];
           }
        }

        function printchild() {
           if (is_array($this->children)) {
                reset($this->children);
                $ac = $this->children ; unset($this->children);

                foreach($ac as $key => $ch) {
                       if ( getclass($ch) == "wheader" ) { continue ;}
                       $this->children[] = $ch;
                }
                if(is_array($this->children)) {
                    reset($this->children);
                    foreach($this->children as $key => $ch) {
                        $val = $this->children[$key];
                        $GLOBALS["$val"]->printit();
                    }
                }
           }
        }

        function indent() {
           $l = $this->level;
           echo "\n";
//           for( $i=0; $i < $l ; ++$i ) {
//                echo  "    ";
//           }
        }

        function setparam($a = "") {
          $temp = array();
          $this->settings = "" ;
          $def  = "def_" . $this->classname;
          global $$def;
          if ( is_array(${$def}) ) {
            reset(${$def});
            foreach(${$def} as $key => $val) {
                $temp["$key"] = $val;
            }
          }
          if ( is_array($a) ) {
            reset($a);
            foreach($a as $key => $val) {
                $temp["$key"] = $val;
            }
          }
          reset($temp);
          foreach($temp as $key => $val) {
                $key = strtoupper($key);
                if ( $key == "COLS" && $this->classname == "table" )    { 
                    $this->cols = $val;
                    continue;
                }
                if ( ($key == "B" or $key == "I" or $key == "SMALL") 
                    && $this->classname == "text" ) {
                    $this->fmt .= "<~$key>"; 
                    continue;
                }
                if ( $key == "COLSPAN" ) { $this->cs   = $val; }
                if ( $key == "ROWSPAN" ) { $this->rs   = $val; }
                if ( $val == "undef" || $val == "UNDEF" ) {
                    $this->settings .= " $key";
                } else {
                    // quoted the VALUE component - RE 11/12/2004
                    if ( $key == "VALUE" ) { 
                       $this->settings .= " $key=\"".htmlspecialchars($val)."\"";
                    } else {
                       $this->settings .= " $key=\"$val\"";
                    }
                }
          }
        }
}

class Window extends HTMLBase {
        public $classname = "window";

        public function __construct($a = "") {
          $this->setparam($a);
        }

        function printit() {
           //echo "<!DOCTYPE HTML PUBLIC \"-//W3C//DTD HTML 3.2 Final//EN\">\n";
           echo "<!DOCTYPE HTML PUBLIC \"-//W3C//DTD HTML 4.01 Transitional//EN\"\n";
           echo "        \"http://www.w3.org/TR/html4/loose.dtd\">\n";
           echo "<HTML>\n<HEAD>\n";
           $this->printheader();
           echo "\n</HEAD>\n<BODY" . $this->settings . ">";
           $this->printchild();
           echo "\n</BODY>\n</HTML>\n";
        }

        function printheader() {
            if (is_array($this->children)) {
                reset($this->children);
                foreach($this->children as $ch) {
                    if ( getclass($ch) == "wheader" ) {
                         $GLOBALS["$ch"]->printit();
                    }
                }
            }
        }
}

class WHeader extends HTMLBase {
        public $classname = "wheader";
        public $title;
        // plx: adding var meta
        public $meta; 

        public function __construct($t = "", $m = "") {
          $this->title = $t;
          // plx: setting arg to var
          $this->meta = $m;
        }

        function printit() {
          if ( isset($this->title) ) {
             echo "        <TITLE>" . $this->title . "</TITLE>";
          }
          // plx: including the content var to head as meta
          if (is_array($this->meta) && count(array_keys($this->meta)) > 0) {
             foreach($this->meta as $name => $content) {
                 echo "        <META NAME=\"".$name."\" CONTENT=\"".$content."\" />";
             }
          }
          $this->printchild();
        }
}

class Table extends HTMLBase {
        public $classname = "table";
        public $cols = 1 ;
        public $currow = 0;
        public $count  = array();
        public $printrow = array();

        public function __construct($a = "") {
          $this->setparam($a);
        }

        function printit() {
           $this->indent(); echo "<TABLE" . $this->settings . ">";
           $this->printtable();
           $this->indent(); echo "</TABLE>";
        }

        function printtable() {
           if (is_array($this->children)) {
                reset($this->children);
                foreach($this->children as $key => $ch) {
                        if ( getclass($ch) != "cell" ) {
                            $GLOBALS["$ch"]->printit();
                            continue;
                        }
                        $row = $this->currow;
                        if (empty($this->printrow[$row]) ) {
                            $this->printrow[$row] = TRUE;
                            $this->indent(); echo "<TR>";
                        }

                        $GLOBALS["$ch"]->printit();
                        $cs = $GLOBALS["$ch"]->cs; $rs = $GLOBALS["$ch"]->rs;
                        for($i = 0; $i < $rs ; ++$i) {
                            $nextrow = $row + $i ;
                            if (empty($this->count[$nextrow]))
                               $this->count[$nextrow] = 0;
                            $this->count[$nextrow] += $cs;
                        }

                        if ( $this->count[$row] == $this->cols ) {
                            $this->indent(); echo "</TR>";
                            ++$this->currow;
                        }
                }
           }
        }
}

