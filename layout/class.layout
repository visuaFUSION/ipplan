    function printit() {
        if ($this->settings)
           echo "<FONT". $this->settings . ">";
        echo str_replace("~", "", $this->fmt).$this->str.str_replace("~", "/", $this->fmt);
        if ($this->settings)
           echo "</FONT>";
    }
}

