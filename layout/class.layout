class Alist extends HTMLBase {
    public $classname = "alist";
    public $tag; public $content;

    public function __construct($t,$c,$a = "") {
       $t = strtoupper($t);
       $this->setparam($a);
       $this->tag = $t;
       $this->content = $c;
    }

    function printit() {
        $this->indent(); echo "<" . $this->tag . $this->settings . ">";
        if (is_array($this->content)) {
            foreach($this->content as $ll) {
                if ( getclass($ll) ) {
		    $this->children = array();
                    $this->insert($ll);
                    $this->indent(); echo "<LI>";
                    $this->printchild();
                    echo "</LI>";
                } else {
                    $this->indent(); echo "<LI>" . $ll . "</LI>";
                }
            }
        }
        $this->indent(); echo "</" . $this->tag . ">";
    }
}

