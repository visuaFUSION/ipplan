class Selectbox extends HTMLBase {
    public $classname = "selectbox";
    public $options ; public $selected;

    public function __construct($o,$a, $s = "" ) {
       $this->setparam($a);
       $this->options = $o;
       $this->selected= $s;
       reset($this->options);
    }

    function printit() {
      $this->indent(); echo "<SELECT". $this->settings . ">";
      foreach($this->options as $val => $na) {
         if (!is_array($na)) {
             $this->indent(); echo "    <OPTION VALUE=\"$val\"";
             if ( $this->selected == $val ) { echo " SELECTED"; }
             echo ">".htmlspecialchars($na);
         } else {
             foreach($na as $txt => $clr) {
                 break;
             }
             $this->indent();
             echo "    <OPTION VALUE=\"$val\"";
             if ( $this->selected == $val ) { echo " SELECTED"; }
             echo "><FONT COLOR=\"$clr\">$txt</FONT>";
         }
         echo "</OPTION>";
      }
      $this->indent(); echo "</SELECT>";
    }
}

